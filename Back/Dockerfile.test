FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install test dependencies
RUN pip install pytest pytest-asyncio pytest-cov responses freezegun

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p Data/logs PDF\ Loans tests test-results  # ‚Üê ADD test-results here

# Set Python path
ENV PYTHONPATH=/app

# Default command to run tests - USE ABSOLUTE PATHS!
CMD ["python", "-m", "pytest", "tests/", "-v", "--junitxml=/app/test-results/test-results.xml", "--cov=src", "--cov-report=xml:/app/test-results/coverage.xml"]